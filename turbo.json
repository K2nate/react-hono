{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "biome:check": {
       "dependsOn": ["^biome:check"]
     },
     "biome:fix": {
       "dependsOn": ["^biome:fix"]
     }
  }
}